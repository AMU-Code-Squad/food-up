<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= foodData.name %> </h1>

        <div style=" width: 30%; margin: auto auto;">
            <form action="/FoodUp/<%= foodData.id %>/comments " method="POST">
                <div class="form-group">
                    <input class="form-control "type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <input class="form-control "type="text" placeholder="author" name="comment[author]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/FoodUp">Go back</a>
        </div>

         
    </div>
</div>


<%- include("../partials/footer") %> 
