<%- include("../partials/header") %>

<h1><%= foundFoodData.name %></h1>

<img src="<%= foundFoodData.image %> " alt="">
<h4><%= foundFoodData.description%></h4>

<a class="btn btn-success" href="/FoodUp/<%= foundFoodData.id %>/comments/new ">Add new comment</a>

<% foundFoodData.comments.forEach(function(comment) { %>
    <p>
        <strong><%= comment.author %> </strong>-
        <%= comment.text %> 
    </p>       
<% }) %>

<%- include("../partials/footer") %>
